@model BetterThanMooshak.Models.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>Hello @Model.userName</h1>

<div class="row">
    <div class="col-md-6" id="Assignments">
        <a href="@Url.Action("index", "assignment")">
            <h2>Open Assignments</h2>
        </a>
        <div>
            <table class="table-bordered table table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.assignments)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("details", "assignment", new { id = x.assignment.id})">
                                    @x.assignment.name
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("details", "course", new { id = x.course.id})">
                                    @x.course.name
                                </a>
                            </td>
                            <td>
                                @x.assignment.endDate.ToShortDateString() @x.assignment.endDate.ToShortTimeString()
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-6" id="Notifications">
        <h2>Notifications</h2>
        <div>
            <table class="table table-responsive">
                <tbody>
                    @foreach (var x in Model.notifications)
                    {
                        <tr>
                            <td>@x.notification.title</td>
                            <td>
                                <a href="@Url.Action("details", "assignment", new { id = x.assignment.id})">
                                    @x.assignment.name
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6" id="Courses">
        <a href="@Url.Action("usercourses", "course")">
            <h2>Active Courses</h2>
        </a>
        <div>
            <table class="table-bordered table table-striped table-hover table-responsive">
                <tbody>
                    @foreach (var x in Model.courses)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("details", "course", new { id = x.id})">
                                    @x.name
                                </a>
                            </td>
                            <td>
                                <p>@x.endDate.ToShortDateString()</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-6" id="Grades">
        <h2>Recent Grades</h2>
        <div>
            <table class="table-bordered table table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.grades)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("details", "assignment", new { id = x.assignment.id})">
                                    @x.assignment.name
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("details", "course", new { id = x.course.id})">
                                    @x.course.name
                                </a>
                            </td>
                            <td>
                                @x.grade.grade
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>