@model BetterThanMooshak.Models.ViewModel.ProblemAddViewModel
@{
    ViewBag.Title = "Add";
}

<div class="boxTItle">
    <h1>Add problem to @Model.courseName (@Model.assignmentName)</h1>
</div>

<div class="boxText">

    @using (Html.BeginForm("add", "problem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", placeholder = "Name..." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(m => m.maxAttempts)
                @Html.TextBoxFor(m => m.maxAttempts, new { @class = "form-control", placeholder = "Amount of attempts...", type = "number" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(m => m.percentOfGrade)
                @Html.TextBoxFor(m => m.percentOfGrade, new { @class = "form-control", placeholder = "Percent of Grade...", type = "number" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(m => m.description, new { @class ="form-control", placeholder = "Description..."})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <div class="testcases add">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>Input</td>
                                <td>Output</td>
                                <td>Score</td>
                                <td>Visible</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var testcase in Model.testcases.cases)
                            {
                                <tr>
                                    <td>@testcase.input</td>
                                    <td>@testcase.output</td>
                                    <td>@testcase.score</td>
                                    <td>@testcase.visable</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a id="addTestcase" class="btn btn-default" data-toggle="modal" data-target="#addTestcaseModal">
                        <i class="fa fa-plus-square"></i>
                        Add Testcase
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <div class="col-md-6">
            <input type="button" value="Cancel" class="btn btn-default" onclick="history.back()" />
        </div>
    }
</div>
<!-- Modal -->
<div id="addTestcaseModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Testcase</h4>
            </div>
            <div class="modal-body clearfix">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <textarea placeholder="Input..." rows="8" cols="30"></textarea>
                    </div>
                    <div class="col-md-6">
                        <textarea placeholder="Output..." rows="8" cols="30"></textarea>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <label for="score">Score: </label>
                        <input name="score" type="number" />
                    </div>
                    <div class="col-md-6">
                        <label for="visible">Visible: </label>
                        <input name="visible" type="checkbox" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-default save" data-dismiss="modal" >Save</button>
            </div>
        </div>

    </div>
</div>