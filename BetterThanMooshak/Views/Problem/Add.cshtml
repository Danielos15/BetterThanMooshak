@model BetterThanMooshak.Models.ViewModel.ProblemViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add problem to @Model.assignment.name</h2>

<div class="boxText">

    @using (Html.BeginForm("add", "problem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.problem.name, new { @class = "form-control", placeholder = "Name..." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.problem.maxAttempts, new { @class = "form-control", placeholder = "Amount of attempts..." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.HiddenFor(m => m.problem.assignmentId)
            </div>
        </div>

        <div class="col-md-6">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <div class="col-md-6">
            <input type="button" value="Cancel" class="btn btn-default" onclick="history.back()" />
        </div>
    }
</div>