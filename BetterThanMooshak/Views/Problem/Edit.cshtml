@model BetterThanMooshak.Models.Entities.Problem

@{
    ViewBag.Title = "Edit problem";
}

<div class="boxTitle">
    <h1>@ViewBag.Title.</h1>
</div>
<div class="boxText">
    @using (Html.BeginForm("edit", "problem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", placeholder = "Name..." })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.ValueFor(m => m.maxAttempts)
            </div>
        </div>
        <div class="hidden">
            @Html.HiddenFor(m => m.assignmentId)
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    }
</div>