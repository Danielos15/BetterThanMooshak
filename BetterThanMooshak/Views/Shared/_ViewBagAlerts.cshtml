@{ if (ViewBag.message != null)
    {
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            @ViewBag.message
        </div>
    }
}
@{ if (ViewBag.errorMessage != null)
    {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            @ViewBag.errorMessage
        </div>
    }
}