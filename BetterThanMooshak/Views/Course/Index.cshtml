@model BetterThanMooshak.Models.ViewModel.CourseViewModel

@{
    ViewBag.Title = "Course Overview";
}

<div class="boxTitle">
    <h1>@ViewBag.Title.</h1>
</div>
<div class="boxText">
    <div class="userActions">
        <a href="@Url.Action("add", "course")">
            <i class="fa fa-plus-square"></i>
            Add Course
        </a>
        <a href="@Url.Action("edit", "course")">
            <i class="fa fa-download"></i>
            Import Courses
        </a>

        <input id="userSearch" type="text" placeholder="Search..." />
        <a href="@Url.Action("search", "course")">
            <i class="fa fa-search"></i>
        </a>
    </div>
    <table id="userTable">
        <thead>
            <tr>
                <td>Name</td>
                <td>Start Date</td>
                <td>End Date</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.courses)
            {
                <tr>
                    <td>@course.name</td>
                    <td>@course.startDate</td>
                    <td>@course.endDate</td>
                    <td>
                        <a class="edit" href="@Url.Action("edit", new { id = course.id })">
                            <i class="fa fa-pencil-square" title="Edit @course.name"></i>
                        </a>

                        <a class="remove" href="@Url.Action("remove", new { id = course.id })">
                            <i class="fa fa-minus-square" title="Remove @course.name" ></i>
                        </a>

                        <a class="remove" href="@Url.Action("enrole", new { id = course.id })">
                            <i class="fa fa-link" title="Enrole students to @course.name"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
