@model BetterThanMooshak.Models.ViewModel.CourseAssignments

@{
    ViewBag.Title = "Details";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">@Model.course.name</h2>
    </div>
</div>

<h2>@ViewBag.title</h2>

<a href="@Url.Action("add", "assignment", new { id = Model.course.id})">Add assignment to @Model.course.name</a><br />

<p>This is the course @Model.course.name</p><br />
<p>it's id is @Model.course.id</p><br />
<p>is start date is: @Model.course.startDate</p><br />
<p>andn it's end date is: @Model.course.endDate</p>
@foreach(var x in Model.assignments)
{
    <a href="@Url.Action("details", "assignment", new { id = x.id})">@x.name</a><br />
}
<div>
    <div id="view1">
        <div>
            <table class="table-bordered table table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Due Date
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.assignments)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("details", "assignment", new { id = x.id})">
                                    @x.name
                                </a>
                            </td>
                            <td>
                                @x.endDate.ToShortDateString() @x.endDate.ToShortTimeString()
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div id="view2">
        <div>
            <table class="table-bordered table table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Due Date
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.assignments)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("details", "assignment", new { id = x.id})">
                                    @x.name
                                </a>
                            </td>
                            <td>
                                @x.endDate.ToShortDateString() @x.endDate.ToShortTimeString()
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



