@model BetterThanMooshak.Models.ViewModel.CourseAssignments

@{
    ViewBag.Title = Model.course.name;
}

<div class="boxTitle">
    <h1>@ViewBag.Title</h1>
</div>

<div class="boxText">
    <a class="btn btn-default" href="@Url.Action("add", "assignment", new { id = Model.course.id})">Add assignment</a>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#view1">Open Assignments</a></li>
        <li><a data-toggle="tab" href="#view2">Closed Assignments</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="view1">
            <div>
                <table class="table-bordered table table-striped table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Due Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.newAssignments)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("details", "assignment", new { id = x.id})">
                                        @x.name
                                    </a>
                                </td>
                                <td>
                                    @x.endDate.ToShortDateString() @x.endDate.ToShortTimeString()
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="view2">
            <div>
                <table class="table-bordered table table-striped table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Due Date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.oldAssignments)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("details", "assignment", new { id = x.id})">
                                        @x.name
                                    </a>
                                </td>
                                <td>
                                    @x.endDate.ToShortDateString() @x.endDate.ToShortTimeString()
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>