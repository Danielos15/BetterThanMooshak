@model BetterThanMooshak.Models.ViewModel.AssignmentIndexViewModel
@{
    ViewBag.Title = "Assignment Overview";
}

<div class="boxTitle">
    <h1>@ViewBag.Title</h1>
</div>
<div class="boxText">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#active">Active Assignments</a></li>
        <li><a data-toggle="tab" href="#inactive">Closed Assignments</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="active">
            <table class="table-bordered table table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.newAssignments)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("details", "assignment", new { id = @x.id })"> @x.name </a>
                            </td>
                            <td>
                                Name of course<!--TODO-->
                            </td>
                            <td>
                                @x.endDate
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="inactive">
            <table class="table-bordered table table-striped table-responsive table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.oldAssignments)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("details", "assignment", new { id = @x.id })"> @x.name </a>
                            </td>
                            <td>Name of course<!--TODO--></td>
                            <td>@x.endDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>