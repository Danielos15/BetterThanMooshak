@model BetterThanMooshak.Models.ViewModel.AssignmentAddViewModel

@Html.AntiForgeryToken()
@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    <div class="col-sm-5">
        @Html.TextBoxFor(m => m.name, new { @class = "form-control", placeholder = "Name..." })
    </div>
</div>

<div class="form-group">
    <div class="col-sm-5">
        @Html.TextBoxFor(m => m.startDate, new { @class = "form-control datepicker", placeholder = "Start date..." })
    </div>
</div>

<div class="form-group">
    <div class="col-sm-5">
        @Html.TextBoxFor(m => m.endDate, new { @class = "form-control datepicker", placeholder = "End date..." })
    </div>
</div>

<div class="form-group">
    <div class="col-sm-5">
        @Html.LabelFor(m => m.description)
        @Html.TextAreaFor(m => m.description, new { @class = "form-control", placeholder = "The assignment description...", rows = 6})
    </div>
</div>

<div class="form-group">
    <div class="col-sm-5">
        <div class="btn-group pull-right">
            <input type="submit" value="Save" class="btn btn-default" />
            <input type="button" value="Cancel" class="btn btn-default" onclick="history.back()" />
        </div>
    </div>
</div>